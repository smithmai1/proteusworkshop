  <exercise label="APEX-PROTEUS-graph-incdec-1-v1" component="proteus">
    <statement>
      <p>
        Referring to the graph below, drag each interval on the left to 
        either increasing or decreasing. 
      </p>

      <image source="images/proteus-inc-graph-1.png" width="47%">
        <shortdescription>Graph of a polynomial function in the first quadrant.</shortdescription>
      </image>
    </statement>
    <cardsort>
      <match>
        <premise><m>(-6, -3.1)</m></premise>
        <premise><m>(-0.75, 2)</m></premise>
        <premise><m>(4.3, \infty)</m></premise>
        <response>Increasing</response>
      </match>
      <match>
        <premise><m>(-\infty, -6)</m></premise>
        <premise><m>(-3.1, -0.75)</m></premise>
        <premise><m>(2, 4.3)</m></premise>
        <response>Decreasing</response>
      </match>
      <match>
        <premise><m>(-5, -2)</m></premise>
        <premise><m>(-\infty, -3.1)</m></premise>
      </match>
    </cardsort>  
  </exercise>